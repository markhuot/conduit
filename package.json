{
  "name": "project-conduit",
  "version": "0.1.0",
  "description": "Event-sourced CMS for LLM-native workflows",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/server.ts",
    "dev:ui": "vite",
    "dev:all": "bun run dev & bun run dev:ui",
    "start": "bun src/server.ts",
    "build": "bun run build:backend && bun run build:ui",
    "build:backend": "bun build src/server.ts --outdir ./dist --target bun",
    "build:ui": "vite build",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "typescript": "^5.3.0",
    "vite": "^7.2.7"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  }
}
